{% macro create_breadcrumb(orgSlug, accessCode, employeeCode, category, depth) %}
    {% import _self as bc %}
    {%- if category.parent is not empty -%}
        <a href="{{ path('magenta_book_index',{orgSlug:orgSlug,accessCode:accessCode,employeeCode:employeeCode, parent: category.parent.id}) }}">
            {{ bc.create_breadcrumb(orgSlug, accessCode, employeeCode, category.parent,depth + 1) }} >
        </a>
    {%- else -%}
        <i class="fa fa-home"> </i>
    {%- endif -%}
    {{ category.name }}
{% endmacro %}
